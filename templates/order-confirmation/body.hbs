{{> header title="Order Processed" }}

<mj-raw>
    <style type="text/css">
    .callout {
        background-color: #375a67;
        padding: 15px 0;
    }
    .callout-large > div {
        text-align: center !important;
        color: #fff !important;
        font-size: 16px !important;
        font-weight: bold;
        padding: 0;
    }
    .callout-small > div {
        text-align: center !important;
        color: #fff !important;
        font-size: 14px !important;
        padding: 0;
    }
    ul.address {
        list-style-type: none;
        padding: 0;
    }
    tr.order-row td {
        border-bottom: 1px dashed #eee;
    }
    tr.order-row td:last-child {
        text-align: center;
    }
    tr.total-row {
        font-weight: bold;
    }
    .bg-off-white {
        background-color: #f5f5f5;
    }
    </style>
</mj-raw>

<mj-section css-class="bg-off-white">
    <mj-column>
        <mj-text>
            Dear {{ user.firstName }} {{ user.lastName }},
        </mj-text>
        <mj-text>
            Thank you for your order!
        </mj-text>
    </mj-column>
</mj-section>


<mj-section css-class="callout">
    <mj-column>
        <mj-text css-class="callout-large"><strong>Order Code</strong></mj-text>
        <mj-text css-class="callout-small">{{ order.order.id }}</mj-text>
    </mj-column>
    <mj-column>
        <mj-text css-class="callout-large"><strong>Order Date</strong></mj-text>
        <mj-text css-class="callout-small">{{ formatDate order.createdAt }}</mj-text>
    </mj-column>
    <mj-column>
        <mj-text css-class="callout-large"><strong>Total Price</strong></mj-text>
        <mj-text css-class="callout-small">${{ formatMoney order.totalPrice }}</mj-text>
    </mj-column>
</mj-section>

{{> footer }}
